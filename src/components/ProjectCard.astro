---
const {
  type = "case", // "category" | "case"
  title,
  href,
  category = "Projet",
  status = "Publié",
  angle = "",
  summary = "",
  tags = [],
} = Astro.props;

const safeTitle = typeof title === "string" && title.trim() ? title : "Projet";
const safeHref = typeof href === "string" && href.trim() ? href : "#";
const safeAngle = typeof angle === "string" ? angle : "";
const safeSummary = typeof summary === "string" ? summary : "";
const safeTags = Array.isArray(tags) ? tags : [];
const isLive = status === "Publié";

const typeLabel =
  type === "category" ? "Catégorie" :
  type === "cyber-project" ? "Projet" :
  "Étude de cas";
---

<article class="card project-card" data-type={type}>
  <a class="card-link" href={safeHref}>
    <header class="card-header">
      <div class="badges">
        <span class={`badge badge-type ${type}`}>{typeLabel}</span>
        <span class="badge badge-category">{category}</span>
        {safeAngle ? <span class="badge badge-angle">{safeAngle}</span> : null}
        <span class={`badge badge-status ${isLive ? "is-live" : "is-soon"}`}>
          {status}
        </span>
      </div>

      <h3 class="card-title">{safeTitle}</h3>

      {safeSummary ? <p class="card-summary">{safeSummary}</p> : null}
    </header>

    {safeTags.length > 0 ? (
      <ul class="tag-list">
        {safeTags.map((t) => (
          <li class="tag">{t}</li>
        ))}
      </ul>
    ) : null}
  </a>

  <style>
    /* Ici : uniquement la STRUCTURE. Pas de couleurs “thème clair”. */

    .project-card .card-link {
      display: block;
      padding: 1rem;
      color: inherit;
      text-decoration: none;
    }

    .project-card .card-header {
      display: grid;
      gap: 0.5rem;
    }

    .project-card .badges {
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
      align-items: center;
    }

    .project-card .tag-list {
      list-style: none;
      padding: 0;
      margin: 0.75rem 0 0;
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
    }

    .project-card .card-title,
    .project-card .card-summary {
      margin: 0;
    }

    .project-card[data-type="category"] {
      border-style: dashed;
    }

    .project-card .badge-type {
      font-size: 0.72rem;
      letter-spacing: 0.02em;
    }

    /* Optionnel : rendre la catégorie légèrement “moins lourde” visuellement */
    .project-card[data-type="category"] .card-summary {
      opacity: 0.95;
    }

    .project-card .badge-angle {
      font-size: 0.72rem;
      letter-spacing: 0.02em;
    }
  </style>
</article>
